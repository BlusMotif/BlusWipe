# Environment Configuration Template
# Copy this file to .env and customize for your deployment

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8000
HOST=0.0.0.0
DEBUG=false

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_BATCH_FILES=5
UPLOAD_TIMEOUT=300      # 5 minutes in seconds

# ===========================================
# AI MODEL SETTINGS
# ===========================================
DEFAULT_MODEL=u2net
USE_GPU=true
MODEL_CACHE_DIR=./models

# Available models:
# - u2net: General purpose, good balance
# - u2netp: Lightweight, faster processing
# - u2net_human_seg: Optimized for people
# - silueta: High quality for objects
# - isnet-general-use: Latest model, best quality

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# ===========================================
# SECURITY SETTINGS
# ===========================================
ALLOWED_ORIGINS=*
SECRET_KEY=your-secret-key-here
CORS_ALLOW_CREDENTIALS=false

# For production, set specific origins:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Error tracking (Sentry)
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Performance monitoring
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# ===========================================
# STORAGE SETTINGS
# ===========================================
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
TEMP_FILE_LIFETIME=3600  # 1 hour in seconds

# Optional: Cloud storage (AWS S3, Google Cloud Storage)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ===========================================
# DATABASE (Optional)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/bluswipe
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# PLATFORM-SPECIFIC VARIABLES
# ===========================================

# Railway.app
# RAILWAY_STATIC_URL=your-static-url

# Heroku
# HEROKU_APP_NAME=your-app-name

# Google Cloud Run
# GOOGLE_CLOUD_PROJECT=your-project-id

# Vercel
# VERCEL_URL=your-vercel-url

# ===========================================
# CUSTOM FEATURES (Optional)
# ===========================================
ENABLE_BATCH_PROCESSING=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Image processing settings
IMAGE_QUALITY=95        # JPEG quality (1-100)
ENABLE_EDGE_ENHANCEMENT=true
DEFAULT_ENHANCEMENT=1.0  # Enhancement strength (0.5-2.0)

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=DEBUG
# RELOAD=true
